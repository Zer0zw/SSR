contract StakingPool is Ownable {
    using SafeMath for uint256;
    
    IERC721 public boredMemberNFT;
    IERC20 public dai;
    address public niftyNFT;
    address public treasury = 0x3DC75c330cD286c98AA99e974972b8B8923d4023;

    struct Stake {
        address owner;
        uint256 totalBalanceBeforeStake;
        uint256 harvested;
        uint provided; // Max 5
        uint[] tokenIds;
    }
    
    uint public totalBMStaked = 0;
    uint public maxNftsStaked = 5;
    uint256 public totalBalance = 0;
    uint256 public totalDistributed = 0;


    address[] addressStaked;

    mapping(address => Stake) public staked;
    
    modifier onlyNifty {
      require(msg.sender == niftyNFT, 'Only Nifty NFT can send the trading fee');
      _;
   }
    
    constructor(address _boredMemberNFT, address _dai, address _niftyNFT) {
        boredMemberNFT = IERC721(_boredMemberNFT);
        dai = IERC20(_dai);
        niftyNFT = _niftyNFT;
    }
    
    function setNiftyNFT(address _niftyNFT) public onlyOwner {
        niftyNFT = _niftyNFT;
    }

    function setTreasury(address _address) public onlyOwner {
        treasury = _address;
    }
    
    function setToken(address _token) public onlyOwner {
        dai = IERC20(_token);
    }
    
    function setBoredMemberNFT(address _boredMemberNFT) public onlyOwner {
        boredMemberNFT = IERC721(_boredMemberNFT);
    }
    
    function processTradingFee(uint256 _amount) public onlyNifty returns (bool) {
        totalBalance = totalBalance + _amount;
        
        if (addressStaked.length > 0) {
            uint shareTradingFee = _amount / totalBMStaked;
            for (uint i=0; i < addressStaked.length; i++) {
                Stake storage s = staked[addressStaked[i]];
                uint BMStaked = s.provided;
                dai.transfer(addressStaked[i], shareTradingFee * BMStaked);
            }
        } else {
            dai.transfer(treasury, _amount);
        }
        
        return true;
    }
    
    function stake(uint[] memory _tokenIds) public {
        Stake storage s = staked[msg.sender];
        
        require(_tokenIds.length <= maxNftsStaked, 'Max stake is 5 NFTs per wallet');
        require(boredMemberNFT.balanceOf(msg.sender) >= _tokenIds.length, 'You have not enough NFT to stake');
        require(boredMemberNFT.isApprovedForAll(msg.sender, address(this)), 'Please approve permission for this contract');
        require(s.provided + _tokenIds.length <= 5, 'Max stake is 5 NFT per wallet');

        for (uint i=0; i < _tokenIds.length; i++) {
            boredMemberNFT.transferFrom(msg.sender, address(this), _tokenIds[i]);
            s.tokenIds.push(_tokenIds[i]);
            totalBMStaked += 1;
        }
        
        s.owner = msg.sender;
        s.harvested = 0;
        s.totalBalanceBeforeStake = totalBalance;
        s.provided = s.provided + _tokenIds.length;

 
        _updateAddressStake(msg.sender);
        
    }

    function _updateAddressStake(address _address) internal {
        bool checkExist = false;
        for (uint j=0; j < addressStaked.length; j++) {
            if(addressStaked[j] == _address) {
                checkExist = true;
            }
        }

        if (checkExist == false) {
            addressStaked.push(_address);
        }
    }
    
    function earned(address _address) public view returns (uint256) {
        Stake storage s = staked[_address];
        if (s.provided <= 0) return 0;
        uint256 rateShare = rate(_address);
        uint256 totalBalanceWhileStake = totalBalance.sub(s.totalBalanceBeforeStake);
        uint256 totalEarned = totalBalanceWhileStake.mul(rateShare).div(100);
        return totalEarned.sub(s.harvested);
    }

    function rate(address _address) public view returns (uint) {
        Stake storage s = staked[_address];
        if (s.provided <= 0) return 0;
        uint totalStaked = boredMemberNFT.balanceOf(address(this));
        return s.provided * 100 / totalStaked;
    }

    function addressStake() public view returns (address[] memory) {
        return addressStaked;
    }

    function nftStaked(address _address) public view returns (uint[] memory) {
        Stake storage s = staked[_address];
        return s.tokenIds;
    }
    
    function unstake(uint[] memory _tokenIds) public {
        Stake storage s = staked[msg.sender];
        require(_tokenIds.length <= s.tokenIds.length, "Can not unstake more than NFTs were staked");

        for (uint i=0; i < _tokenIds.length; i++) {
            for (uint j=0; j < s.tokenIds.length; j++) {
                if (s.tokenIds[j] == _tokenIds[i]) {
                    boredMemberNFT.transferFrom(address(this), s.owner, s.tokenIds[j]);
                    s.tokenIds[j] = s.tokenIds[s.tokenIds.length - 1];
                    s.tokenIds.pop();
                    s.provided -= 1;
                    totalBMStaked -= 1;
                    break;
                }
            }
        } 
        
        if (s.tokenIds.length <= 0) {
            for (uint k=0; k < addressStaked.length; k++) {
                if(addressStaked[k] == msg.sender) {
                    addressStaked[k] =  addressStaked[addressStaked.length - 1];
                    addressStaked.pop();
                }
            }
            delete staked[msg.sender];
        }

    }
}