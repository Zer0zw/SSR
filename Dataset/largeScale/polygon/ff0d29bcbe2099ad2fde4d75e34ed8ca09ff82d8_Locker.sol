  constructor() DividendPayingToken("STI POWER","STIPW"){}

  function getVaultsOf(address user) view external returns(Vault[] memory) {
    return vaults[user];
  }

  function distribute() internal {
    if(_actualHaving <= (maxHalving + 1) && block.number > _lastDistribution) {
      uint blockGap = block.number - _lastDistribution;
      uint crossedHalvings = blockGap / halvingGap;

      uint amount2distribute = 0;

      if(crossedHalvings > 0) {
        for (uint256 i = 0; i < crossedHalvings; i++) {
          uint halvingBlock = genesisBlock + _actualHaving * halvingGap;
          uint realBlockGap = halvingBlock - _lastDistribution;
          amount2distribute = _rewardPerBlock * realBlockGap;
          _rewardPerBlock = _rewardPerBlock * 2;
          _actualHaving = _actualHaving + 1;
          if(_actualHaving > (maxHalving + 1)) {
            _rewardPerBlock = 0;
            break;
          }
        }
      } else {
        amount2distribute = _rewardPerBlock * blockGap;
      }

      _lastDistribution = block.number;

      if(token.balanceOf(address(this)) >= amount2distribute) {
        distributeDividends(amount2distribute);
      }
    }
  }

  function stake(uint amount, uint time, bool claimLocked) external returns (uint multiplier, uint unlock) {
    require(amount <= pair.balanceOf(msg.sender), "Locker: You can't stake more than LP you hold !");
    require(time >= 0, "Locker: You can't go back in time");

    totalStaked = totalStaked + amount;

    uint _unlock = block.timestamp + time;
    uint _yearsLocked = (time / (3600 * 24 * 365));
    if(_yearsLocked > 5) {
      _yearsLocked = 5;
    }
    uint _multiplier = _yearsLocked + 1;
    if(claimLocked) {
      _multiplier = _multiplier * 2;
      _userlockedClaim[msg.sender] = true;
    }
    vaults[msg.sender].push(Vault(amount, _unlock, _multiplier, claimLocked));

    bool success = pair.transferFrom(msg.sender, address(this), amount);
    require(success, "Locker: LP tokens need to be sent to contract");

    _mint(msg.sender, amount * _multiplier);
    distribute();

    return (_multiplier, _unlock);
  }

  function stakedOf(address account) public view returns (uint amount) {
    Vault[] memory accountVaults = vaults[account];
    
    uint total = 0;

    for (uint i = 0; i < accountVaults.length; i++) {
      Vault memory vault = accountVaults[i];
      total = total + vault.amount;
    }

    return total;
  }

  function unlockedOf(address account) public view returns (uint amount) {
    Vault[] memory accountVaults = vaults[account];
    
    uint total = 0;

    for (uint i = 0; i < accountVaults.length; i++) {
      Vault memory vault = accountVaults[i];
      if(vault.unlock <= block.timestamp) {
          total = total + vault.amount;
      }
    }

    return total;
  }

  function claim() external {
    require(_userlockedClaim[msg.sender], "Locker: You cannot claim !");
    distribute();
    withdrawDividend();
  }

  function unstake(uint amount) external {
    Vault[] storage accountVaults = vaults[msg.sender];

    totalStaked = totalStaked - amount;

    uint total = 0;
    uint token2burn = 0;

    for (uint i = 0; i < accountVaults.length; i++) {
      if(total < amount) {
        Vault storage vault = accountVaults[i];
      
        if(vault.unlock <= block.timestamp) {
          if(total + vault.amount > amount) {
            uint neededAmount = amount - total;
            total = total + neededAmount;
            token2burn = token2burn + neededAmount * vault.multiplier;
            vault.amount = vault.amount - neededAmount;
          } else {
            total = total + vault.amount;
            token2burn = token2burn + vault.amount * vault.multiplier;
            accountVaults[i] = accountVaults[accountVaults.length -1];
            accountVaults.pop();
          }

          total = total + vault.amount;
          token2burn = token2burn + vault.amount * vault.multiplier;
          if(vault.amount <= (amount - total)) {
            vault.amount = 0;
          } else {
            vault.amount = vault.amount - (amount - total);
          }
        }
      } else {
        break;
      }
    }

    bool isUserLocked = false;

    for (uint256 i = 0; i < accountVaults.length; i++) {
      Vault memory vault = accountVaults[i];
      if(vault.claimLocked) {
        isUserLocked = true;
        break;
      }
    }

    if(!isUserLocked) {
      _userlockedClaim[msg.sender] = true;
    }


    require(total >= amount, "Locker: You can't withdraw more than you have unlocked !");
    require(pair.transfer(msg.sender, total), "Locker: LP tokens need to be transfered");
  
    distribute();
    withdrawDividend();
    _burn(msg.sender, token2burn);
  }

  function _sendTokens(address to, uint amount) internal override {
    token.transfer(to, amount);
  }
