/**
 * @notice - This is the NFT contract
 */
 
contract TwentyFourNFTStaking is ReentrancyGuard{
    using SafeERC20 for IERC20;
    IERC20 usdc;
    //IERC20 Matic;
    address public nftContract;
    address public aaveProtocol;
    address gov;
    uint public timePeriod;
    uint public totalStakedPlatform;
    struct stakeDetails {
        uint endTime; //start+259200(3 days)
        mapping(address => uint256) stakedAmount;
        uint totalStakes;
        uint totalStaked;
        uint exists;
        PaymentSplitter paymentSplitter;
    }
    mapping (uint=>stakeDetails) public idToStake;
    event Staked(uint _tokenId,address indexed _user,uint stake,uint totalStaked,uint endTime,uint startTime);
    event DefiChanged(address oldDefi,address newDefi);

    constructor(address _usdc,  address _nftContract, address _gov,uint _timePeriod){
        usdc = IERC20(_usdc);
        //Matic = IERC20(_matic);
        nftContract = _nftContract;
        gov = _gov; 
        timePeriod = _timePeriod;
    }

    function changePeriod(uint _period) external {
        require(gov==msg.sender,'Not Aurthorised');
        timePeriod = _period;
    }
    function changeGov(address _gov) external {
        require(gov==msg.sender,'Not Aurthorised');
        gov = _gov;
    }

    function setDeFiProtocol (address _defi) public {
        require(msg.sender == gov,'NOT AUTHORISED');
        address oldProtocol = aaveProtocol;
        aaveProtocol = _defi;
        emit DefiChanged(oldProtocol,aaveProtocol);
    }
    function getStakeAmount(uint _tokenId,address user)public view returns(uint){
        return idToStake[_tokenId].stakedAmount[user];
    }

    function getPaymentSplitter(uint _tokenId) external view returns(address) {
        return address(idToStake[_tokenId].paymentSplitter);
    }
    function stakeAmount(uint tokenId,address user) external view returns (uint){
        return idToStake[tokenId].stakedAmount[user];
    }

    function stake(uint _tokenId,uint amount, uint deFi) public{
        require(idToStake[_tokenId].exists == 1,'NFT doesnt exists');
        require(idToStake[_tokenId].endTime>block.timestamp,'You cant stake in Bidding period has started');
        require(amount>0,'Please enter valid amount');
        require(deFi == 2||deFi ==1,'Defi value can only be 1 or 2');
        usdc.safeTransferFrom(msg.sender, address(this), amount);
        if(deFi == 2){
        usdc.approve(address(idToStake[_tokenId].paymentSplitter), amount);}
        else{
            usdc.approve(aaveProtocol, amount);
            IStrategy(aaveProtocol).deposit(amount);
        }
        idToStake[_tokenId].paymentSplitter.addPayee(msg.sender,amount,deFi);
        idToStake[_tokenId].stakedAmount[msg.sender] +=amount;
        idToStake[_tokenId].totalStakes+=1;
        idToStake[_tokenId].totalStaked+=amount;
        totalStakedPlatform+=amount;
        emit Staked(_tokenId,msg.sender,idToStake[_tokenId].stakedAmount[msg.sender],idToStake[_tokenId].totalStaked,idToStake[_tokenId].endTime,block.timestamp);
    }


    function unstake(uint _tokenId,uint bamount) public nonReentrant{
        require(idToStake[_tokenId].endTime>block.timestamp,'You cant unstake in Bidding period has started');
        bool res = idToStake[_tokenId].paymentSplitter.unstake(msg.sender);
        if(res == false){
            IStrategy(aaveProtocol).withdraw(idToStake[_tokenId].stakedAmount[msg.sender], bamount);
            usdc.safeTransfer( msg.sender, idToStake[_tokenId].stakedAmount[msg.sender]);
        }
        idToStake[_tokenId].totalStaked-=idToStake[_tokenId].stakedAmount[msg.sender];
        totalStakedPlatform-=idToStake[_tokenId].stakedAmount[msg.sender];
        idToStake[_tokenId].stakedAmount[msg.sender] =0;
        idToStake[_tokenId].totalStakes-=1;
        emit Staked(_tokenId,msg.sender,idToStake[_tokenId].stakedAmount[msg.sender],idToStake[_tokenId].totalStaked,idToStake[_tokenId].endTime,block.timestamp);
    }
    function withdraw(uint _tokenId,uint bamount,address account) public nonReentrant {
        require(IBid(Inft(nftContract).auctionAddress()).getEndTime(_tokenId)<block.timestamp,'You cant unstake in Bidding period has started');
        uint res = idToStake[_tokenId].paymentSplitter.release(account);
        if(res>0){
            IStrategy(aaveProtocol).earn();

            uint totalAmount = (IStrategy(aaveProtocol).wantLockedTotal())*idToStake[_tokenId].stakedAmount[account]/totalStakedPlatform;
            IStrategy(aaveProtocol).withdraw(totalAmount, bamount);
            usdc.safeTransfer(account, totalAmount);
        }
        totalStakedPlatform-=idToStake[_tokenId].stakedAmount[account];
        idToStake[_tokenId].stakedAmount[account] =0;
        emit Staked(_tokenId,account,idToStake[_tokenId].stakedAmount[account],idToStake[_tokenId].totalStaked,idToStake[_tokenId].endTime,block.timestamp);
    }
    function withdrawWithoutEarn(uint _tokenId,uint bamount,address account) public nonReentrant {
        require(IBid(Inft(nftContract).auctionAddress()).getEndTime(_tokenId)<block.timestamp,'You cant unstake in Bidding period has started');
        uint res = idToStake[_tokenId].paymentSplitter.release(account);
        if(res>0){
            //IStrategy(aaveProtocol).earn();

            uint totalAmount = (IStrategy(aaveProtocol).wantLockedTotal())*idToStake[_tokenId].stakedAmount[account]/totalStakedPlatform;
            IStrategy(aaveProtocol).withdraw(totalAmount, bamount);
            usdc.safeTransfer(account, totalAmount);
        }
        totalStakedPlatform-=idToStake[_tokenId].stakedAmount[account];
        idToStake[_tokenId].stakedAmount[account] =0;
    }
    
    
    function withdrawAll(uint _tokenId, uint bamount) public {
        withdraw(_tokenId,bamount,msg.sender);
        IBid(Inft(nftContract).auctionAddress()).claimSoldPricePatron(_tokenId,msg.sender);
    }
    
    function withdrawAllwoEarn(uint _tokenId, uint bamount) public {
        withdrawWithoutEarn(_tokenId,bamount,msg.sender);
        IBid(Inft(nftContract).auctionAddress()).claimSoldPricePatron(_tokenId,msg.sender);
    }
    
    function startStakePeriod(uint _tokenId) external onlyContract(){
        idToStake[_tokenId].endTime = block.timestamp+timePeriod;   //+259200;
        idToStake[_tokenId].exists = 1;
        idToStake[_tokenId].paymentSplitter = (new PaymentSplitter(usdc));
        emit Staked(_tokenId,address(0),0,0,idToStake[_tokenId].endTime,block.timestamp);
    }
    function totalStaked(uint _tokenId) external view returns (uint){
        return idToStake[_tokenId].totalStaked;
    }
    
    function getDefiStatus(uint _tokenId,address account) external view returns (uint){
        return idToStake[_tokenId].paymentSplitter._defistatus(account);
    }

    modifier onlyContract (){
        require(msg.sender == nftContract,"You don't have the permission to do that");
        _;
    }
    modifier onlyPaymentSplitter (uint _tokenId){
        require(msg.sender == address(idToStake[_tokenId].paymentSplitter),"You don't have the permission to do that");
        _;
    }
}