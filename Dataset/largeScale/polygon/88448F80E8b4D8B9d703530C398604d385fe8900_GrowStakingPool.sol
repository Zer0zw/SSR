contract GrowStakingPool is Initializable, AccessControlUpgradeable, ReentrancyGuardUpgradeable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    bytes32 public constant CONFIGURATOR_ROLE = keccak256("CONFIGURATOR_ROLE");
    bytes32 public constant CONTROLLER_ROLE = keccak256("CONTROLLER_ROLE");
    bytes32 public constant KEEPER_ROLE = keccak256("KEEPER_ROLE");

    uint256 constant _DECIMAL = 1e18;

    /// @notice rewards release duration
    uint256 public rewardDurationBlocks;

    /// @notice last rewards update block
    uint256 public lastRewardBlock;

    /// @notice remaining rewards
    uint256 public remainingRewardTokenAmount;

    /// @notice Address of staking token
    IERC20 public STAKING_TOKEN;

    /// @dev total shares
    uint256 public totalSupply;

    /// @notice User Shares
    mapping(address => uint256) public userShares;

    function initialize(
        address _STAKING_TOKEN
    ) public initializer {
        __AccessControl_init();
        __ReentrancyGuard_init();

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        rewardDurationBlocks = 64000;

        STAKING_TOKEN = IERC20(_STAKING_TOKEN);
    }

    // --------------------------------------------------------------
    // Config Interface
    // --------------------------------------------------------------

    function setRewardDurationBlocks(uint256 _rewardsDurationBlocks) external onlyRole(CONFIGURATOR_ROLE) {
        require(_rewardsDurationBlocks > 0, "StakePool: _rewardsDurationBlocks is not valid");
        updateReward();
        rewardDurationBlocks = _rewardsDurationBlocks;
    }

    // --------------------------------------------------------------
    // Read Interface
    // --------------------------------------------------------------

    function balanceOf(address userAddress) public view returns(uint256) {
        if (totalSupply == 0) {
            return 0;
        } else {
            return userShares[userAddress].mul(pricePreShare()).div(_DECIMAL);
        }
    }

    function pendingRewardsPreShare() public view returns(uint256) {
        if (block.number <= lastRewardBlock || totalSupply == 0) {
            return 0;
        }

        uint256 totalPendingRewards = Math.min(
            remainingRewardTokenAmount,
            remainingRewardTokenAmount
                .mul(block.number.sub(lastRewardBlock))
                .div(rewardDurationBlocks)
        );
        return totalPendingRewards.mul(_DECIMAL).div(totalSupply);
    }

    function rewardsPreSharePreBlock() public view returns(uint256) {
        if (totalSupply == 0) {
            return 0;
        } else {
            return remainingRewardTokenAmount
                .mul(_DECIMAL)
                .div(rewardDurationBlocks).div(totalSupply);
        }
    }

    function pricePreShare() public view returns(uint256) {
        if (totalSupply == 0) {
            return _DECIMAL;
        } else {
            return totalBalance().mul(_DECIMAL).div(totalSupply).add(pendingRewardsPreShare());
        }
    }

    function totalShares() public view returns(uint256) {
        return totalSupply;
    }

    function totalBalance() public view returns(uint256) {
        return STAKING_TOKEN.balanceOf(address(this)).sub(remainingRewardTokenAmount);
    }

    function sharesOf(address userAddress) public view returns(uint256) {
        return userShares[userAddress];
    }

    // --------------------------------------------------------------
    // Reward
    // --------------------------------------------------------------

    function updateReward() internal {
        if (block.number <= lastRewardBlock) {
            return;
        }
        uint256 reward = remainingRewardTokenAmount.mul(block.number.sub(lastRewardBlock)).div(rewardDurationBlocks);

        remainingRewardTokenAmount = remainingRewardTokenAmount.sub(Math.min(remainingRewardTokenAmount, reward));
        lastRewardBlock = block.number;
    }

    function addReward(uint256 reward) public {
        // 1. update remaining reward
        updateReward();

        // 2. transfer reward
        STAKING_TOKEN.safeTransferFrom(msg.sender, address(this), reward);

        // 3. update remaining reward
        remainingRewardTokenAmount = remainingRewardTokenAmount.add(reward);

        emit LogRewardAdded(reward);
    }

    function checkIfNeedGetReward() external onlyRole(KEEPER_ROLE) {
        // 1. update remaining reward
        updateReward();

        // 2. get reward from grow rewarder
        uint256 growBalanceBefore = STAKING_TOKEN.balanceOf(address(this));
        IGrowRewarder(GrowRegister.get.GrowRewarderAddress()).getVaultReward();

        // 3. update remaining reward
        uint256 rewardAmount = STAKING_TOKEN.balanceOf(address(this)).sub(growBalanceBefore);
        remainingRewardTokenAmount = remainingRewardTokenAmount.add(rewardAmount);

        emit LogRewardAdded(rewardAmount);
    }

    // --------------------------------------------------------------
    // Write Interface
    // --------------------------------------------------------------

    function depositTo(uint256 amount, address userAddress) external onlyRole(CONTROLLER_ROLE) {
        _deposit(amount, userAddress, true);
    }

    // only GrowRewarder
    function depositToUser(uint256 amount, address userAddress) external {
        require(msg.sender == GrowRegister.get.GrowRewarderAddress(), "only GROW_REWARDER");
        _deposit(amount, userAddress, false);
    }

    function deposit(uint256 amount) external nonReentrant {
        _deposit(amount, msg.sender, true);
    }

    function _deposit(uint256 amount, address userAddress, bool tokenTransferFromSender) private {
        // 1. update remaining reward
        updateReward();

        // 2. shares
        uint256 sharesToAdd = amount.mul(_DECIMAL).div(pricePreShare());

        // 3. transfer
        STAKING_TOKEN.safeTransferFrom(tokenTransferFromSender ? msg.sender : userAddress, address(this), amount);

        // 4. write user shares
        userShares[userAddress] = userShares[userAddress].add(sharesToAdd);
        totalSupply = totalSupply.add(sharesToAdd);

        emit LogDeposit(userAddress, amount);
    }

    function _withdraw(uint256 amount, address user, address to) private {
        // max amount is balanceOf account
        amount = Math.min(amount, balanceOf(user));

        // 1. update remaining reward
        updateReward();

        // 2. shares
        uint256 sharesToRemove = amount.mul(_DECIMAL).div(pricePreShare());

        // 3. write user shares
        userShares[user] = userShares[user].sub(sharesToRemove);
        totalSupply = totalSupply.sub(sharesToRemove);

        // 4. transfer
        STAKING_TOKEN.safeTransfer(to, amount);

        emit LogWithdraw(user, amount);
    }

    function withdraw(uint256 amount) external nonReentrant {
        _withdraw(amount, msg.sender, msg.sender);
    }

    function withdrawAll() external nonReentrant {
        _withdraw(balanceOf(msg.sender), msg.sender, msg.sender);
    }

    // --------------------------------------------------------------
    // Events
    // --------------------------------------------------------------
    event LogPump(address sender, uint256 amount);
    event LogDeposit(address user, uint256 amount);
    event LogWithdraw(address user, uint256 amount);
    event LogRewardAdded(uint256 amount);
}