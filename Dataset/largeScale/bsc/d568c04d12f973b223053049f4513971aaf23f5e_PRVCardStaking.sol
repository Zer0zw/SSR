contract PRVCardStaking is Ownable {
    using SafeBEP20 for IBEP20;

    IBEP20 public immutable pydexToken;
    IBEP20 public immutable BUSD;
    uint256 public immutable depositAmount;
    uint256 public immutable roi;

    IPYDEXReserve public PYDEXReserve;
    IPydexCardManager public pydexCardManager;
    uint256 public totalRewardPaid;
    uint256 public totalDepositsInBUSD;
    uint256 public totalDepositsInPYDEX;
    uint256 public totalDeposits;

    IPydexRouter public immutable pydexRouter;

    uint256 public constant MAX_LOCKUP_TIME =  30 * 60;
    bool public depositEnabled;

    bool public withdrawEnabled;

    struct Deposit {
        uint256 depositTime;
        uint256 depositAmountInBUSD;
        uint256 depositAmountInPYDEX;
        uint256 totalRewardPaid;
        bool isSettled;
    }

    mapping(address => Deposit) public _users;

    event onDeposit(uint256 depositAmountInPYDEX);
    event onWithdraw(uint256 totalReward, uint256 totalCapital);

    constructor(
        IBEP20 _pydexToken,
        uint256 _depositAmount,
        IBEP20 _BUSD,
        IPYDEXReserve _PYDEXReserve,
        IPydexRouter _pydexRouter,
        uint256 _roi
    ) {
        pydexToken = _pydexToken;
        roi = _roi;
        PYDEXReserve = _PYDEXReserve;
        BUSD = _BUSD;
        depositAmount = _depositAmount;
        pydexRouter = _pydexRouter;
    }

    function setPYDEXReserve(address _PYDEXReserve) external onlyOwner {
        PYDEXReserve = IPYDEXReserve(_PYDEXReserve);
    }

    function setPYDEXCardManager(address _pydexCardManager) external onlyOwner {
        pydexCardManager = IPydexCardManager(_pydexCardManager);
    }

    function flipDeposit() external onlyOwner {
        depositEnabled = !depositEnabled;
    }

    function flipWithdraw() external onlyOwner {
        withdrawEnabled = !withdrawEnabled;
    }

    function getPendingReward(address user) public view returns (uint256) {
        if (_users[user].isSettled) {
            return 0;
        }

        uint256 principal = _users[user].depositAmountInPYDEX;
        uint256 timePassedSoFar = block.timestamp - _users[user].depositTime;
        uint256 maxReward = (principal * roi) / 1000;
        return (maxReward * timePassedSoFar) / MAX_LOCKUP_TIME;
    }

    function deposit() external {
        _deposit(msg.sender);
    }

    function deposit(address recipient) external  {
        require(pydexCardManager.isManager(msg.sender),"You are not manager");
        _deposit(recipient);
    }

    function _deposit(address recipient) internal {
        require(depositEnabled, "Deposit Not Enabled");
        require(
            _users[recipient].depositAmountInPYDEX == 0,
            "user has already deposited"
        );
        BUSD.safeTransferFrom(msg.sender, address(this), depositAmount);
        totalDepositsInBUSD += depositAmount;

        uint256 prePYDEXBalance = pydexToken.balanceOf(address(this));
        swapForPYDEX(depositAmount);
        uint256 depositAmountInPyDex = pydexToken.balanceOf(address(this)) -
            prePYDEXBalance;
        totalDepositsInPYDEX += depositAmountInPyDex;
        _users[recipient].depositAmountInBUSD += depositAmount;
        _users[recipient].depositTime = block.timestamp;
        _users[recipient].depositAmountInPYDEX += depositAmountInPyDex;
        totalDeposits += 1;
        emit onDeposit(depositAmountInPyDex);
    }

    function swapForPYDEX(uint256 amount) internal {
        BUSD.safeApprove(address(pydexRouter), amount);
        address[] memory path = new address[](2);
        path[0] = address(BUSD);
        path[1] = address(pydexToken);

        // make the swap
        pydexRouter.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function withdraw() external {
        require(withdrawEnabled, "Withdraw Not enabled");

        require(!_users[msg.sender].isSettled, "Deposit Already Settled");
        require(
            _users[msg.sender].depositAmountInPYDEX > 0,
            "You did not deposit anything"
        );

        uint256 capitalAmount = _users[msg.sender].depositAmountInPYDEX;
        uint256 rewardAmount = getPendingReward(msg.sender);
        _users[msg.sender].isSettled = true;
        _users[msg.sender].totalRewardPaid = rewardAmount;
        totalRewardPaid += rewardAmount;
        pydexToken.safeTransfer(msg.sender, capitalAmount); // transfer capital
        PYDEXReserve.withdrawPydex(msg.sender, rewardAmount); // pay reward;
        emit onWithdraw(rewardAmount, capitalAmount);
    }

    function withdrawSafe(IBEP20 token) external onlyOwner {
        token.safeTransfer(msg.sender, token.balanceOf(address(this)));
    }
}