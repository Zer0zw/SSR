{
    "Variables": {
        "User Stake Amount": [
            "userStakedAmount",
            "Stake.stakedAmount"
        ],
        "User Stake Reward": [
            "rewardsReceived",
            "penaltyHistories.bonus"
        ],
        "User Stake Time": [
            "Stake.stakedAt",
            "UnStake.stakedAt"
        ],
        "Stake Token Address": [
            "stakingToken"
        ],
        "Reward Token Address": [
            "rewardsToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "bool resp = stakingToken.transferFrom(msg.sender, address(this), stakedAmount)"
            }
        ],
        "getReward": [
            {
                "Function": "claimStakingReward",
                "Node": "xanaToken.mint(msg.sender,  tokenToMint.mul(rewardsReceived[_winnerAddress][campaignId]))"
            },
            {
                "Function": "claimTaxBonus",
                "Node": "bool resp = stakingToken.transfer(msg.sender, stakerPenaltyBonus)"
            }
        ],
        "unStake": [
            {
                "Function": "unStake",
                "Node": "bool resp = stakingToken.transfer(msg.sender, payoutAmount)"
            }
        ]
    }
}