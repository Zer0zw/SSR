{
    "Variables": {
        "User Stake Amount": [
            "balance"
        ],
        "User Stake Reward": [
            "pendingReward",
            "poolReward"
        ],
        "User Stake Time": [],
        "Stake Token Address": [
            "depositToken"
        ],
        "Reward Token Address": [
            "rewardToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "targetPool.stake(balance)"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "rewardToken.safeTransfer(address(controller), poolReward)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "depositToken.safeTransfer(address(controller), _amount)"
            }
        ]
    }
}