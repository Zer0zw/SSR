{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.pendingRewards",
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [
            "UserInfo.userLockedPeriod",
            "UserInfo.lastClaim"
        ],
        "Stake Token Address": [
            "PoolInfo.lpToken"
        ],
        "Reward Token Address": [
            "PoolInfo.rwdToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount"
            }
        ],
        "getReward": [
            {
                "Function": "claimAPR",
                "Node": "uint256 claimedAmount = safeRewardTransfer(_user, user.pendingRewards, pid)"
            },
            {
                "Function": "claimFixed",
                "Node": "uint256 claimedAmount = safeRewardTransfer(_user, claimAmount,pid)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), amount"
            }
        ]
    }
}