{
    "Variables": {
        "User Stake Amount": [
            "stakeBalance"
        ],
        "User Stake Reward": [
            "_calculateStakeRewards"
        ],
        "User Stake Time": [
            "lastStakeClaimed"
        ],
        "Stake Token Address": [
            "tokenAddress"
        ],
        "Reward Token Address": [
            "rewardsAddress"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "require(token.transferFrom(msg.sender, address(this), _amount)"
            }
        ],
        "getReward": [
            {
                "Function": "claimRewards",
                "Node": "require(token.transferFrom(rewardsAddress, msg.sender, _stakeReward)"
            },
            {
                "Function": "claimRewardsAndStake",
                "Node": "stakeBalance[msg.sender] = stakeBalance[msg.sender] + _stakeReward"
            }
        ],
        "unStake": [
            {
                "Function": "unStake",
                "Node": "require(token.transfer(msg.sender, userTokenBalance)"
            },
            {
                "Function": "unStake",
                "Node": "require(token.transferFrom(rewardsAddress, msg.sender, _stakeReward)"
            }
        ]
    }
}