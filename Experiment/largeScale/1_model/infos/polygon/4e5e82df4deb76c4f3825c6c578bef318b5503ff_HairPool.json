{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [],
        "Stake Token Address": [
            "hairToken"
        ],
        "Reward Token Address": [
            "earningToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "hairToken.safeTransferFrom(address(msg.sender), address(this), _amount)"
            }
        ],
        "getReward": [
            {
                "Function": "deposit",
                "Node": "safeTransferReward(address(msg.sender), currentRewardBalance"
            },
            {
                "Function": "deposit",
                "Node": "safeTransferReward(address(msg.sender), pending"
            },
            {
                "Function": "withdraw",
                "Node": "safeTransferReward(address(msg.sender), currentRewardBalance"
            },
            {
                "Function": "withdraw",
                "Node": "safeTransferReward(address(msg.sender), pending"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "hairToken.safeTransfer(address(msg.sender), _amount)"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "hairToken.safeTransfer(address(msg.sender), user.amount)"
            }
        ]
    }
}