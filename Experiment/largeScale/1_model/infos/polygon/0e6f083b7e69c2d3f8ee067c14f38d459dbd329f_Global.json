{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt",
            "UserInfo.rewardLockedUp"
        ],
        "User Stake Time": [
            "UserInfo.nextHarvestUntil"
        ],
        "Stake Token Address": [
            "PoolInfo.lpToken"
        ],
        "Reward Token Address": [
            "global"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount"
            },
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransfer(feeAddress, depositFee"
            }
        ],
        "getReward": [
            {
                "Function": "payOrLockupPendingGlobal",
                "Node": "safeGlobalTransfer(msg.sender, totalRewards)"
            },
            {
                "Function": "payReferralCommission",
                "Node": "global.mint(referrer, refBonusEarned)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), user.amount"
            }
        ]
    }
}