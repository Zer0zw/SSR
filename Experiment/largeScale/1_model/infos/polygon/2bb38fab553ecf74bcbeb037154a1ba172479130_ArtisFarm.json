{
    "Variables": {
        "User Stake Amount": [
            "stakerObject.artisBalance"
        ],
        "User Stake Reward": [
            "totalARTISRewards"
        ],
        "User Stake Time": [
            "stakerObject.startTime"
        ],
        "Stake Token Address": [
            "artisToken"
        ],
        "Reward Token Address": [
            "artisToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "tokensReceived",
                "Node": "stakers[from].artisBalance = stakers[from].artisBalance.add(amount)"
            }
        ],
        "getReward": [
            {
                "Function": "compoundYield",
                "Node": "stakers[staker].artisBalance = stakers[staker].artisBalance.add(yield)"
            },
            {
                "Function": "unstake",
                "Node": "artisToken.send(msg.sender, amount.add(yield), \"\")"
            },
            {
                "Function": "unstakeAll",
                "Node": "unstake(amount)"
            }
        ],
        "unStake": [
            {
                "Function": "unstake",
                "Node": "artisToken.send(msg.sender, amount.add(yield), \"\")"
            },
            {
                "Function": "unstakeAll",
                "Node": "unstake(amount)"
            }
        ]
    }
}