{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [
            "startTimestamp",
            "bonusEndTimestamp"
        ],
        "Stake Token Address": [
            "pills"
        ],
        "Reward Token Address": [
            "rewardToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pills.safeTransferFrom(address(msg.sender), address(this), _amount)"
            }
        ],
        "getReward": [
            {
                "Function": "deposit",
                "Node": "rewardToken.safeTransfer(address(msg.sender), pending)"
            },
            {
                "Function": "withdraw",
                "Node": "rewardToken.safeTransfer(address(msg.sender), pending)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pills.safeTransfer(address(msg.sender), _amount)"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pills.safeTransfer(address(msg.sender), user.amount)"
            }
        ]
    }
}