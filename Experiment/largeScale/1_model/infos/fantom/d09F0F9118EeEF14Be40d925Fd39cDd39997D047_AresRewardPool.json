{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [],
        "Stake Token Address": [
            "PoolInfo.token"
        ],
        "Reward Token Address": [
            "ares"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.token.safeTransferFrom(_sender, address(this), _amount)"
            }
        ],
        "getReward": [
            {
                "Function": "deposit",
                "Node": "safeAresTransfer(_sender, _pending)"
            },
            {
                "Function": "withdraw",
                "Node": "safeAresTransfer(_sender, _pending)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.token.safeTransfer(_sender, _amount)"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.token.safeTransfer(msg.sender, _amount)"
            }
        ]
    }
}