{
    "Variables": {
        "User Stake Amount": [
            "balanceOf"
        ],
        "User Stake Reward": [
            "Boardseat.rewardEarned"
        ],
        "User Stake Time": [
            "Boardseat.epochTimerStart"
        ],
        "Stake Token Address": [
            "pshare"
        ],
        "Reward Token Address": [
            "crystal"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "super.stake(amount)"
            }
        ],
        "getReward": [
            {
                "Function": "claimReward",
                "Node": "crystal.safeTransfer(msg.sender, userReward)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "super.withdraw(amount)"
            },
            {
                "Function": "exit",
                "Node": "withdraw(balanceOf(msg.sender))"
            }
        ]
    }
}