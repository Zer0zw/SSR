            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "userRewards",
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [
            "UserInfo.lockEndedTimestamp"
        ],
        "Stake Token Address": [
            "PoolInfo.lpToken"
        ],
        "Reward Token Address": [
            "pearls"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransferFrom(_account, address(this), _amount"
            },
            {
                "Function": "depositWithReferralCode",
                "Node": "pool.lpToken.safeTransferFrom(_account, address(this), _amount"
            }
        ],
        "getReward": [
            {
                "Function": "claim",
                "Node": "pearls.mint(_account, pending)"
            },
            {
                "Function": "compoundSmol",
                "Node": "pearls.mint(_account, pending)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount"
            }
        ]
    }
}