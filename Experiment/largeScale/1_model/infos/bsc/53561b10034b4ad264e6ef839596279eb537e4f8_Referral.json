        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "token.transferFrom(msg.sender, address(this), _amount"
            },
            {
                "Function": "referredStake",
                "Node": "token.transferFrom(msg.sender, address(this), _amount"
            }
        ],
        "getReward": [
            {
                "Function": "claimRewards",
                "Node": "token.transfer(msg.sender, comission)"
            }
        ],
        "unStake": [
            {
                "Function": "UnStaking",
                "Node": "token.transfer(msg.sender, result + user.stakedAmount)"
            },
            {
                "Function": "UnStaking",
