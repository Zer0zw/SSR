{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt",
            "UserInfo.rewardLockedUp"
        ],
        "User Stake Time": [
            "UserInfo.nextHarvestUntil"
        ],
        "Stake Token Address": [
            "PoolInfo.lpToken"
        ],
        "Reward Token Address": [
            "niob"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount)"
            },
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransfer(feeAddress, depositFee)"
            }
        ],
        "getReward": [
            {
                "Function": "payOrLockupPendingNiob",
                "Node": "safeNiobTransfer(msg.sender, totalRewards)"
            },
            {
                "Function": "payReferralCommission",
                "Node": "niob.mint(referrer, commissionAmount)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount)"
            },
            {
                "Function": "withdrawNiob",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount)"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), amount)"
            }
        ]
    }
}