{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt"
        ],
        "User Stake Time": [],
        "Stake Token Address": [
            "PoolInfo.lpToken"
        ],
        "Reward Token Address": [
            "rewardToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount)"
            }
        ],
        "getReward": [
            {
                "Function": "deposit",
                "Node": "rewardToken.safeTransfer(address(msg.sender), pending)"
            },
            {
                "Function": "withdraw",
                "Node": "rewardToken.safeTransfer(address(msg.sender), pending)"
            },
            {
                "Function": "compound",
                "Node": "No direct transfer statement, rewards are compounded into the staked amount"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), _amount)"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), oldAmount)"
            },
            {
                "Function": "recoverStolenFund",
                "Node": "pool.lpToken.safeTransfer(address(msg.sender), oldAmount)"
            }
        ]
    }
}