{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.pendingRewards"
        ],
        "User Stake Time": [
            "UserInfo.startTime"
        ],
        "Stake Token Address": [
            "PoolInfo.stakingToken"
        ],
        "Reward Token Address": [
            "rewardToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "pool.stakingToken.safeTransferFrom(msg.sender, address(this), amount"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "safeTokenTransfer(msg.sender, user.pendingRewards)"
            },
            {
                "Function": "getReward",
                "Node": "pool.stakingToken.safeTransfer(address(msg.sender), amount"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.stakingToken.safeTransfer(address(msg.sender), amount"
            },
            {
                "Function": "exit",
                "Node": "pool.stakingToken.safeTransfer(address(msg.sender), amount"
            }
        ]
    }
}