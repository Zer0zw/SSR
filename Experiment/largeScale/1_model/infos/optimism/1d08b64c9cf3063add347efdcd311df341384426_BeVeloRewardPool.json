{
    "Variables": {
        "User Stake Amount": [
            "_balances"
        ],
        "User Stake Reward": [
            "rewards"
        ],
        "User Stake Time": [
            "duration"
        ],
        "Stake Token Address": [
            "token"
        ],
        "Reward Token Address": [
            "token"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "_balances[msg.sender] = _balances[msg.sender] + amount"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "token.safeTransfer(msg.sender, reward)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "_balances[msg.sender] = _balances[msg.sender] - amount"
            }
        ]
    }
}