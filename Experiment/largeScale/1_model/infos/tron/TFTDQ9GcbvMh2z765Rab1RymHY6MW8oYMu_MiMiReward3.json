{
    "Variables": {
        "User Stake Amount": [
            "balanceOfPower"
        ],
        "User Stake Reward": [
            "_rewards"
        ],
        "User Stake Time": [
            "_lastStakedTime"
        ],
        "Stake Token Address": [
            "_lpToken"
        ],
        "Reward Token Address": [
            "_dego"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "super.stake(amount, affCode)"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "_dego.transfer(msg.sender, leftReward )"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "super.withdraw(amount)"
            },
            {
                "Function": "exit",
                "Node": "withdraw(balanceOf(msg.sender))"
            }
        ]
    }
}