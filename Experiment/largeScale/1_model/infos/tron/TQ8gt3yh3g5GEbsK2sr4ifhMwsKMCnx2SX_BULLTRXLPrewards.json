{
    "Variables": {
        "User Stake Amount": [
            "balanceOf"
        ],
        "User Stake Reward": [
            "rewards"
        ],
        "User Stake Time": [
            "DURATION"
        ],
        "Stake Token Address": [],
        "Reward Token Address": [
            "hotCoin"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stake",
                "Node": "super.stake(amount)"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "hotCoin.safeTransfer(msg.sender, reward.sub(feeReward))"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "super.withdraw(amount)"
            },
            {
                "Function": "exit",
                "Node": "withdraw(balanceOf(msg.sender))"
            }
        ]
    }
}