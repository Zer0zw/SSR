{
    "Variables": {
        "User Stake Amount": [
            "UserInfo.amount"
        ],
        "User Stake Reward": [
            "UserInfo.rewardDebt",
            "UserInfo.remainingIceTokenReward"
        ],
        "User Stake Time": [
            "PoolInfo.lastRewardTime"
        ],
        "Stake Token Address": [
            "PoolInfo.stakingToken"
        ],
        "Reward Token Address": [
            "ice"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "deposit",
                "Node": "pool.stakingToken.safeTransferFrom(address(msg.sender), address(this), _amount"
            }
        ],
        "getReward": [
            {
                "Function": "deposit",
                "Node": "user.remainingIceTokenReward = safeRewardTransfer(msg.sender, pending)"
            },
            {
                "Function": "withdraw",
                "Node": "user.remainingIceTokenReward = safeRewardTransfer(msg.sender, pending)"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "pool.stakingToken.safeTransfer(address(msg.sender), _amount"
            },
            {
                "Function": "emergencyWithdraw",
                "Node": "pool.stakingToken.safeTransfer(address(msg.sender), user.amount"
            }
        ]
    }
}