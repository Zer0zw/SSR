{
    "Variables": {
        "User Stake Amount": [
            "balanceOf"
        ],
        "User Stake Reward": [
            "UserRewards.rewards"
        ],
        "User Stake Time": [
            "periodFinish",
            "lastUpdateTime"
        ],
        "Stake Token Address": [
            "stakedToken"
        ],
        "Reward Token Address": [
            "rewardToken"
        ]
    },
    "Calculations": {
        "Stake": [
            {
                "Function": "stakeFor",
                "Node": "super.stakeFor(forWhom, amount)"
            }
        ],
        "getReward": [
            {
                "Function": "getReward",
                "Node": "require(rewardToken.transfer(msg.sender, reward), 'reward transfer failed')"
            }
        ],
        "unStake": [
            {
                "Function": "withdraw",
                "Node": "super.withdraw(amount)"
            },
            {
                "Function": "exit",
                "Node": "withdraw(uint128(balanceOf(msg.sender)))"
            }
        ]
    }
}